<% include ../views/partials/header %>

<% movie.forEach((mov)=>{ %>

<div class="row">
      <a href="/movies">Go Back</a>
      <br>
      <h2><%=mov.title%></h2>
      <div class="columns large-4">
        <img class="th" src="<%=mov.cover%>">
      </div>
      <div class="columns large-8">
        <ul class="side-nav">
          <li><strong>Genre: </strong><%=mov.genre%></li>
          <li><strong>Release Date: </strong><%mov.release_date%></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
      <h3>Movie Plot</h3>
      <p><%=mov.plot%></p>
    </div>
    <hr>
    <div class="row">
      <h3>Trailer</h3>
      <iframe width="600" height="315" src="https://www.youtube.com/embed/<%=mov.trailer%>" frameborder="0" allowfullscreen></iframe>
    </div>

    <br>
    <a href="/movies/edit/<%=mov._id%>">Edit</a> |
    <a href="#" class="delete-movie" data-movie-id="<%=mov._id%>" data-csrf="{_csrf}">Delete</a>
    <br>



<%})%>

<% include ../views/partials/footer %>